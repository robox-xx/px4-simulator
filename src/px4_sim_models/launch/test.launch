<?xml version="1.0"?>
<launch>
      <!-- 生成障碍物的脚本 -->
    <node name="world_gen_node" pkg="px4_sim_models" type="test.py" output="screen" />
      <!-- 打开地图 -->
    <arg name="world_path" default="$(find px4_sim_models)/worlds/test.world" />

    <env name="GAZEBO_MODEL_PATH" value="$(find px4_sim_models)/models:$(optenv GAZEBO_MODEL_PATH)" />
    <env name="GAZEBO_RESOURCE_PATH" value="$(find px4_sim_models)/worlds:$(optenv GAZEBO_RESOURCE_PATH)" />
      <!-- 启动gazebo -->
    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="world_name" value="$(arg world_path)" />
        <arg name="paused" value="false" />
        <arg name="use_sim_time" value="true" />
        <arg name="gui" value="false" /> 
    </include>

    <node name="gazebo_gui" pkg="gazebo_ros" type="gzclient" output="screen" 
          launch-prefix="bash -c 'sleep 3; $0 $@' " />
    <!-- tf变化 -->
    <node pkg="tf" type="static_transform_publisher" name="tf_map_to_base" 
          args="0 0 0 0 0 0 map base_link 100" />

    <node pkg="tf" type="static_transform_publisher" name="tf_base_to_lidar" 
          args="0 0 0.06 0 0 0 base_link iris/laser_2d 100" />

    <node pkg="tf" type="static_transform_publisher" name="tf_base_to_livox" 
          args="0.1 0 0 0 0 0 base_link livox_frame 100" />

    <node pkg="tf" type="static_transform_publisher" name="tf_base_to_imu" 
          args="0 0 -0.05 0 0 0 base_link imu_gazebo::link 100" />
      <!-- 无人机导入 -->
    <node name="spawn_iris" pkg="gazebo_ros" type="spawn_model" output="screen"
          args="-sdf -file $(find px4_sim_models)/models/iris_3d_lidar/iris_3d_lidar.sdf 
                -model iris -x 0 -y 0 -z 0.5" 
          launch-prefix="bash -c 'sleep 8; $0 $@' " />
      <!-- mavros端口配置 -->
    <include file="$(find mavros)/launch/px4.launch">
        <arg name="fcu_url" value="udp://:14540@127.0.0.1:14557" />
    </include>
      <!-- 打开rviz -->
    <node name="rviz" pkg="rviz" type="rviz" args="-d $(find px4_sim_models)/rviz/rviz.rviz" />

</launch>